<title>Register</title>
{{> _errors}}
<div class="container my-5">
    <div class="container-fluid h-custom">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="assets/register.png"
                    class="img-fluid">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form action="/register" method="POST">
                    <div class="form-group">
                        <label for="username"><strong>Username</strong></label>
                        <input type="text" name="username" id="username" class="form-control"
                            placeholder="Enter Username" value="{{#if username}}{{username}}{{/if}}">
                    </div>
                    <div class="form-group mb-4">
                        <label for="password"><strong>Password</strong></label>
                        <input type="password" name="password" id="password" class="form-control"
                            placeholder="Enter Password" value="{{#if password}}{{password}}{{/if}}">
                    </div>
                    <div class="text-center text-lg-start mt-4 pt-2">
                        <div class="d-grid">
                            <button type="submit" class="btn btn-danger">Register</button>
                        </div>
                        <p class="small fw-bold mt-2 pt-1 mb-0">Do you have an account? <a href="/login "
                                class="link-success">Login</a></p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>