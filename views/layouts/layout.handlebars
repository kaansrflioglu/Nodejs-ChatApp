<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="icon" type="image/x-icon" href="assets/icon.png" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
  <link rel="stylesheet" href="style.css" />
</head>

<body>

  <header>
    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <div class="container-fluid">
        <img src="assets/icon.png" alt="Logo" width="48" height="48" class="m-1" />
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse mx-3" id="collapsibleNavbar">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link" href="/">
                <div class="nav-item-content">
                  <img src="assets/home.png" alt="Home" width="32" height="32" />
                  <span class="">Home</span>
                </div>
              </a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/chat">
                <div class="nav-item-content">
                  <img src="assets/chat.png" alt="Chat" width="32" height="32" />
                  <span class="">Chat</span>
                </div>
              </a>
            </li>
            {{#if username}}
            <li class="nav-item">
              <a class="nav-link" href="/logout">
                <div class="nav-item-content">
                  <img src="assets/logout.png" alt="Logout" width="32" height="32" />
                  <span class="">Logout</span>
                </div>
              </a>
            </li>
            {{else}}
            <li class="nav-item">
              <a class="nav-link" href="/login">
                <div class="nav-item-content">
                  <img src="assets/login.png" alt="Login" width="32" height="32" />
                  <span class="">Login</span>
                </div>
              </a>
            </li>
            {{/if}}
          </ul>
        </div>
      </div>
    </nav>
  </header>

  {{{body}}}

  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js"
    integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.min.js"
    integrity="sha384-0pUGZvbkm6XF6gxjEnlmuGrJXVbNuzT9qBBavbLwCsOGabYfZo0T0to5eqruptLy"
    crossorigin="anonymous"></script>
  <script src="/socket.io/socket.io.js"></script>
</body>

</html>